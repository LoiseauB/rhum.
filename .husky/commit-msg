echo ' 📝 Check commit message convention 📝';
npx --no-install commitlint --config commitlint.config.cjs --edit $1 ||
(
    echo ' ❌ Commit failed, error in your commit message ❌';
    echo ' Please follow the commit message convention';
    echo ' ⬆️ More information above ⬆️';
    echo '\n';
    false;
)
